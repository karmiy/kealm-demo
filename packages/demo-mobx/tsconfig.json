{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "paths": {                                  
      "@/*": ["src/*"],
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@views/*": ["src/views/*"],
      "@views": ["src/views"],
      "@shared/*": ["src/shared/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@hooks": ["src/hooks"],
      "@router": ["src/router"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
    }
  },
  "include": ["./src"]
}
