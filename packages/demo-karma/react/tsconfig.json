{
  "compilerOptions": {
    "allowJs": true,
    "strictNullChecks": true,
    "module": "esnext",
    "removeComments": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "lib": ["dom", "es7"]
  },
  "exclude": ["node_modules", "build"]
}
